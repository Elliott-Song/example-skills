<?xml version="1.0" encoding="utf-8"?>
<grammar xml:lang="en-US" version="1.0" root="root"
	xmlns="http://www.w3.org/2001/06/grammar" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.w3.org/2001/06/grammar http://www.iristk.net/xml/srgs.xsd" tag-format="semantics/1.0">

	<rule id="root" scope="public">	
	    <one-of>
			<item>
				<ruleref uri="#silence" />
				<tag>out.silence = 1</tag>
			</item>
			<item>
				<ruleref uri="#exit"/>
	    		<tag>out.exit = 1</tag>
			</item>
			<item>
				<ruleref uri="#yes" />
				<tag>out.yes = 1</tag>
			</item>
			<item>
				<ruleref uri="#no" />
				<tag>out.no = 1</tag>
			</item>
			<item>
				<ruleref uri="#questions" />
				<tag>out.question = rules.questions</tag>
			</item>
			<item>
				<ruleref uri="#questionstart" />
				<tag> out.questionstart = 1</tag>
			</item>	
			<item>
				<ruleref uri="#features" />
				<tag> out.features = 1</tag>
			</item>
	    </one-of>
	</rule>
	
	<rule id="silence">
		<one-of>
			<item>silence</item>
			<item>quiet</item>
			<item>shut up</item>
			<item>hush</item>
    	</one-of>
	</rule>
	
	<rule id="exit">
		<one-of>
		    <item>adios</item>
		    <item>hejdo</item>
			<item>good bye</item>
			<item>goodbyek</item>
			<item>bye</item>
		</one-of>
	</rule>
	
	<rule id="yes">
		<one-of>
			<item>yes</item>
			<item>yeah</item>
			<item>yup</item>
			<item>mm</item>
    	</one-of>
	</rule>
	
	<rule id="no">
		<one-of>
			<item>no</item>
			<item>nope</item>
			<item>never</item>
			<item>forget it</item>
    	</one-of>
	</rule>


	<rule id="questions">	
	  <one-of>
	  		<item>
	  		    <one-of>
	  		        <item>what is your name?</item>
	  		        <item>what's your name?</item>
  		        </one-of>
	  		    <tag>out = "whatsYourName"</tag></item>
	  		<item>
	  		    <one-of>
	  		        <item>what is up</item>
	  		        <item>what's up</item>
  		        </one-of>
	  		    <tag>out = "whatsUp"</tag></item>
	  		    <item>
	  		    <one-of>
	  		        <item>how are you</item>
	  		        <item>how are you feeling</item>
	  		        <item>how do you feel</item>
	  		        <item>how are you doing</item>
	  		        <item>how you doing</item>
  		        </one-of>
	  		    <tag>out = "howAreYou"</tag></item>
	   		<item>how old are you?<tag>out = "howOldAreYou"</tag></item>
	   		<item>
	   			<one-of>
	   				<item>Who built you</item>
	   				<item>who made you?</item>
   				</one-of>
	   			<tag>out = "whoMadeYou"</tag></item>
	   		<item>
   		    	<one-of>
        			<item>What can you do?</item>
        			<item>What can I ask</item>
        			<item>Help me</item>
        		</one-of>
        		<tag>out = "whatCanYouDo"</tag></item>
  			<item>What are you?<tag>out = "whatAreYou"</tag></item>
		</one-of>
	</rule>
	
	<rule id="questionstart">	
	  <one-of>
	   		<item>how</item>
	   		<item>who</item>
	   		<item>where</item>
	   		<item>what</item>
	   		<item>how's</item>
	   		<item>who's</item>
	   		<item>where's</item>
	   		<item>what's</item>
	   		<item>do you</item>
	   		<item>can you tell me</item>
	   		<item>will</item>
	   		<item>would</item>
	   		<item>does</item>
	   		<item>do</item>
	   		<item>did</item>
		</one-of>
	</rule>
 
</grammar>
