<?xml version="1.0" encoding="utf-8"?>
<grammar xml:lang="en-US" version="1.0" root="root"
	xmlns="http://www.w3.org/2001/06/grammar" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.w3.org/2001/06/grammar http://www.iristk.net/xml/srgs.xsd"
	tag-format="semantics/1.0">

	<rule id="root" scope="public">
		<one-of>
			<item>
				<ruleref uri="#entries"/>  
			</item>
		</one-of>
	</rule>

	<rule id="entries">	
		<item repeat="0-1">
			<one-of>
				<item>can you</item>
				<item>furhat</item>
				<item>please</item>
			</one-of>
		</item>
		<item repeat="0-1">
			<one-of>
				<item>please</item>
			</one-of>
		</item>
		<item repeat="0-1">
			<one-of>
				<item>do</item>
				<item>play</item>
				<item>show</item>
			</one-of>
		</item>
		<item repeat="0-1">
			<one-of>
				<item>a</item>
				<item>the</item>
				<item>your</item>
			</one-of>
		</item>
		<one-of>	
		   	<item>presentation</item>
		   	<item>introduction</item>
		</one-of>
	</rule>
</grammar>
